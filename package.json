{
  "name": "Xysti",
  "description": "On-demand sports app front-end and server",
  "author": "Tom Oakley",
  "license": "MIT",
  "version": "0.9.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomoakley/xysti"
  },
  "homepage": "https://github.com/tomoakley/xysti",
  "keywords": [
    "react",
    "isomorphic",
    "universal",
    "webpack",
    "express",
    "hot reloading",
    "react-hot-reloader",
    "redux",
    "starter",
    "boilerplate",
    "babel"
  ],
  "main": "bin/client.js",
  "scripts": {
    "start": "concurrent --kill-others \"npm run start-prod\" \"npm run start-prod-api\" \"npm run start-prod-bot\"",
    "start-prod": "better-npm-run start-prod",
    "start-prod-api": "better-npm-run start-prod-api",
    "start-prod-bot": "better-npm-run start-prod-bot",
    "build": "NODE_ENV=production HOST=app.xysti.co API_HOST=api.xysti.co BOT_HOST=bot.xysti.co better-npm-run build",
    "postinstall": "npm run build",
    "lint": "eslint -c .eslintrc src server",
    "start-dev": "better-npm-run start-dev",
    "start-dev-api": "better-npm-run start-dev-api",
    "start-dev-bot": "better-npm-run start-dev-bot",
    "watch-client": "better-npm-run watch-client",
    "dev": "cross-env NODE_ENV=development HOST=localhost API_HOST=localhost BOT_HOST=localhost concurrent --kill-others \"npm run watch-client\" \"npm run start-dev\" \"npm run start-dev-api\" \"npm run start-dev-bot\"",
    "db:migrate:create": "node_modules/.bin/sequelize migration:create",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "test": "node_modules/.bin/jest",
    "test-node": "./node_modules/mocha/bin/mocha $(find server -name '*-test.js') --compilers js:babel-core/register",
    "test-node-watch": "./node_modules/mocha/bin/mocha $(find api -name '*-test.js') --compilers js:babel-core/register --watch"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/client.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080,
        "API_PORT": 3030,
        "BOT_PORT": 4000
      }
    },
    "start-prod-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./server",
        "NODE_ENV": "production",
        "API_PORT": 3030
      }
    },
    "start-prod-bot": {
      "command": "node ./bin/bot.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "API_PORT": 3030,
        "BOT_PORT": 4000
      }
    },
    "start-dev": {
      "command": "node ./bin/client.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "API_PORT": 3030,
        "BOT_PORT": 4000
      }
    },
    "start-dev-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./server",
        "NODE_ENV": "development",
        "API_PORT": 3030
      }
    },
    "start-dev-bot": {
      "command": "node ./bin/bot.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "BOT_PORT": 4000,
        "PORT": 3000,
        "API_PORT": 3030
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "PORT": 3000,
        "API_PORT": 3030
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "api-ai-recognizer": "^1.0.1",
    "auth0-js": "^7.3.0",
